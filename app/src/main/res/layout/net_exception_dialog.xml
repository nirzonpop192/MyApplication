<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:minWidth="300.0dip"
    android:orientation="vertical">

    <TextView
        android:id="@id/ftSuccessTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/colorTextPrimary"
        android:textSize="24.0dip"
        android:textStyle="bold" />

    <TextView
        android:id="@id/dialogText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16.0dip"
        android:text=""
        android:textSize="18.0dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogBtnNegative"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/cancel_dialog_button_ripple_effect"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="18.0dip" />

        <Button
            android:id="@+id/dialogBtnPositive"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/general_dialog_button_ripple_effect"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="18.0dip" />
    </LinearLayout>
</LinearLayout>