<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_motive_dialog_big_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="25.0dip"
            android:src="@drawable/logo_agrani_bank" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="4.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_branch_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10.0dip"
            android:text="Branch Name:"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contact_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="Address:"
            android:textSize="18.0sp" />

        <LinearLayout
            android:id="@+id/contact_phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_phone"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:padding="5.0dip"
                android:text="Phone"
                android:textSize="16.0sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/call_icon"
                android:drawableStart="@drawable/call_icon"
                android:gravity="left"
                android:padding="5.0dip"
                android:text=" Call Now"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact_email_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_email"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:padding="5.0dip"
                android:text="Email:"
                android:textSize="16.0sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/send_email_icon"
                android:drawableStart="@drawable/send_email_icon"
                android:gravity="left"
                android:padding="5.0dip"
                android:text=" Email Us"
                android:textSize="18.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <Button
            android:id="@+id/cancelContactButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cancel_button_ripple_effect"
            android:text="@string/btnCancel"
            android:textColor="@color/generalButtonTextColor" />
    </LinearLayout>
</LinearLayout>