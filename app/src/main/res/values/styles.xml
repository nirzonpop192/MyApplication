<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="button_style">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="noAnimTheme" parent="@style/BankAppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="BankAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/spinner_list_style</item>
        <item name="android:typeface">normal</item>
        <item name="android:homeAsUpIndicator">@drawable/back_button_24px</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="spinner_list_style" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:padding">5.0dip</item>
        <item name="android:divider">#ff818181</item>
        <item name="android:dividerHeight">0.5dip</item>
    </style>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:minEms">2</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>
